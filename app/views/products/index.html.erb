<h1>Listing Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>price</th>
    <th>renter</th>
    <th>Condition</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.renter %></td>
    <td><%= product.condition %></td>
    <td><%= product "Louer l'article ici", product, class: 'white-text'  %></td>
   
  </tr>
<% end %>
</table>

<br />
  <% if @search.pages > 1 %>
    <p>There are <%= @search.pages %> pages in total </p>
  <% end %>
<br />

<hr/>
<h2>rails-simple-search</h2>
<%= form_for @search, :url => "/product/index" do |f| %>
  <%= f.label "Title" %> 
  <%= f.text_field 'title' %> 
  <br/>
  <%= f.label "Description" %> 
  <%= f.text_field 'description' %> 
  <br/>
  <%= f.label "Renter" %> 
  <%= f.text_field 'renter' %> 
  <br/>
  <%= f.label "price" %> 
  <%= f.text_field 'price' %> 
  <br/>
  <%= f.label "Condition" %> 
  <%= f.text_field 'Condition' %> 
  <br/>
  <%= f.label "Page" %> 
  <%= f.select 'page', @search.pages_for_select  %> 
  <br/>
  <%= f.submit "search" %>
<% end %>