<!DOCTYPE html>
<html>
<head>
  <title>RentArt</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] -%>
    <%= javascript_tag do %>
    Materialize.toast('<%= flash[:notice] %>', 5000);
    <% end %>
  <% end -%>

  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper">
        <ul data-activates="mobile" id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="/">Accueil</a></li>
          <li><%= link_to "Add Product ", new_product_path %></li>
          <li><%= link_to "Search Product ", products_path %></li>
          <li><%= link_to "Confirmation  ", tenants_path %></li>
          <li><%= link_to "Register", new_user_registration_path %></li>
          <li><%= link_to "Log in ", new_user_session_path %></li>
        </ul>
      </div>
    </nav>
  </div>

  <head>
    <%= yield :head %>
  </head>

  <div class="row">

    <div class="col s0 m2"><p></p></div>
    <div class="col s12 m8">
      <%= yield %>
    </div>
    <div class="col s0 m2"></div>

  </div>

  <footer class="page-footer">

    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="white-text">RentArt - Location d'articles !</h5>
        </div>
      </div>
    </div>

    <div class="footer-copyright">
      <div class="container">
      Â© 2016 Ajjali Wassim, Di Stasio Leonardo
      </div>
    </div>

  </footer>

</body>
</html>
